<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <!-- ### Logging ###-->
  <log4net>
    <root>
      <level value="ALL"/>
      <appender-ref ref="ColoredConsoleAppender"/>
    </root>
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="DEBUG"/>
        <foreColor value="Red"/>
      </mapping>
      <mapping>
        <level value="INFO"/>
        <foreColor value="White"/>
      </mapping>
      <mapping>
        <level value="WARN"/>
        <foreColor value="White"/>
      </mapping>
      <mapping>
        <level value="ERROR"/>
        <foreColor value="White"/>
        <backColor value="Red, HighIntensity"/>
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d{yyyy-MM-dd hh:mm:ss} %-5p - %m%n"/>
      </layout>
    </appender>
  </log4net>
  <system.serviceModel>
    <bindings>
      <wsHttpBinding>
        <binding name="WSHttpBinding_IPLMPackService"
                 closeTimeout="00:05:00" openTimeout="00:05:00"
                 receiveTimeout="00:05:00" sendTimeout="00:05:00">
          <security mode="TransportWithMessageCredential">
            <transport clientCredentialType="None" />
            <message clientCredentialType="UserName" />
          </security>
        </binding>
      </wsHttpBinding>
    </bindings>
    <client>
      <endpoint address="https://plmpack.azurewebsites.net/PLMPackService.svc"
          binding="wsHttpBinding" bindingConfiguration="WSHttpBinding_IPLMPackService"
          contract="PLMPackSR.IPLMPackService" name="WSHttpBinding_IPLMPackService" />
    </client>  </system.serviceModel>
</configuration>